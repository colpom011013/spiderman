<!DOCTYPE html>
<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/phaser@3.60.0/dist/phaser.min.js"></script>
</head>
<body>
    <script>
        const config = {
            type: Phaser.AUTO,
            width: 800,
            height: 600,
            physics: { default: 'arcade', arcade: { gravity: { y: 800 } } },
            scene: { preload: preload, create: create, update: update }
        };

        let player, graphics, line;
        let isSwinging = false;
        let anchor = { x: 0, y: 0 };
        const game = new Phaser.Game(config);

        function preload() {
            // Placeholder for Spidey
            this.load.image('spidey', 'https://labs.phaser.io/assets/sprites/asuna_by_be_m_d_z-d491791.png');
        }

        function create() {
            player = this.physics.add.sprite(400, 300, 'spidey').setScale(0.5);
            player.setCollideWorldBounds(true);
            graphics = this.add.graphics();

            this.input.on('pointerdown', (pointer) => {
                anchor.x = pointer.x;
                anchor.y = pointer.y;
                isSwinging = true;
            });

            this.input.on('pointerup', () => {
                isSwinging = false;
                graphics.clear();
            });
        }

        function update() {
            if (isSwinging) {
                graphics.clear();
                graphics.lineStyle(2, 0xffffff);
                graphics.lineBetween(player.x, player.y, anchor.x, anchor.y);

                // Simple "Swing" Physics: Pull player toward anchor
                this.physics.moveTo(player, anchor.x, anchor.y, 400);
            }
        }
    </script>
</body>
</html>
